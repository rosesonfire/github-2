{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean-build-scraper",
      "type": "shell",
      "command": "npm run clean-build",
      "options": {
        "cwd": "${workspaceFolder}/scraper"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean-build-scraper-data-api",
      "type": "shell",
      "command": "npm run clean-build",
      "options": {
        "cwd": "${workspaceFolder}/scraperDataAPI"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "docker-compose",
      "type": "shell",
      "command": "docker-compose up --build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["clean-build-scraper", "clean-build-scraper-data-api"]
    }
  ]
}